<body class="login-page">
    <div class="container">
        <h1>Login Page</h1>
        <form action="/admin-login" method="POST">
            <div class="form-content">
                <label for="username">Username</label>
                <input type="text" name="username" required placeholder="Enter username">
            </div>
            <div class="form-content">
                <label for="password">Password</label>
                <input type="password" name="password" required placeholder="Enter password">
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
    </div>

    <style>
        /* General styling */
        body.login-page {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f7fc;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        .login-page {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            width: 100%;
            background-color: #f4f7fc;
        }

        .container {
            height: auto;
            width: 100%;
            max-width: 400px;
            margin: 20px;
            border: 2px solid #ddd;
            border-radius: 10px;
            background-color: white;
            padding: 30px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        }

        /* Form content styling */
        .form-content {
            margin: 15px 0;
        }

        .form-content input {
            display: block;
            width: 100%;
            padding: 12px;
            margin-top: 8px;
            border: 2px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
            outline: none;
        }

        .form-content input:focus {
            border-color: #6c63ff;
        }

        .form-content label {
            font-weight: bold;
            font-size: 16px;
            color: #333;
            margin-bottom: 8px;
        }

        /* Button styling */
        .btn {
            display: block;
            width: 80%;
            padding: 12px;
            background-color: #6c63ff;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            margin-top: 20px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #5a54e6;
        }

        /* Responsive Design */
        @media (max-width: 480px) {
            .container {
                width: 90%;
                padding: 20px;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
</body>
