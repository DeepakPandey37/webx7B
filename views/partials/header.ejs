<header class="header">
  <a href="/" class="header__logo">WEBX7</a>

  <nav class="header__nav">
      <ul>
          <li><a href="/" class="nav-link">Home</a></li>
          <li><a href="/contact" class="nav-link">Mocktest</a></li>
          <li><a href="/help" class="nav-link">Help?</a></li>
      </ul>
  </nav>

  <div class="header__button">
      <a href="/add" class="admin-button">Admin</a>
  </div>
</header>

<style>
/* Header Styling */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  background-color: #333;
  color: #ffffff;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  position: sticky; /* Makes header stick to the top */
  top: 0;
  z-index: 100; /* Ensures header is above other content */
}

/* Logo */
.header__logo {
  font-size: 24px;
  font-weight: bold;
  color: #4CAF50;
  text-decoration: none;
  transition: color 0.3s ease;
}

.header__logo:hover {
  color: #66bb6a;
}

/* Navigation */
.header__nav ul {
  display: flex;
  list-style: none;
  margin: 0; /* Remove default ul margins */
  padding: 0; /* Remove default ul padding */
  gap: 20px;
}

.nav-link {
  color: #ffffff;
  text-decoration: none;
  font-size: 16px;
  transition: color 0.3s ease;
  padding: 8px 12px; /* Added padding for better click area */
  border-radius: 5px; /* Added rounded corners */
}

.nav-link:hover {
  color: #66bb6a;
  background-color: rgba(255, 255, 255, 0.1); /* Subtle background on hover */
}

/* Admin Button */
.admin-button {
  display: inline-block; /* Important for padding and rounded corners to work */
  padding: 8px 12px;
  background-color: #4CAF50;
  color: #ffffff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-weight: bold;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.admin-button:hover {
  background-color: #388e3c;
}

/* Responsive Design */
@media (max-width: 768px) {
  .header {
      flex-direction: column;
      align-items: stretch; /* Stretch items to full width */
      gap: 10px;
  }

  .header__nav ul {
      flex-direction: column;
      align-items: center;
      width: 100%;
      gap: 10px;
  }

  .nav-link {
      width: 100%;
      text-align: center;
  }

  .admin-button {
      width: 100%;
      text-align: center;
  }
}
</style>